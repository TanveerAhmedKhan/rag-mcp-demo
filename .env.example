# RAG MCP Server Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google AI Configuration
# =============================================================================
# Get your API key from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Pinecone Configuration
# =============================================================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone environment (e.g., us-west1-gcp, us-east1-gcp)
PINECONE_ENVIRONMENT=us-west1-gcp

# Pinecone index name (will be created if it doesn't exist)
PINECONE_INDEX_NAME=rag-documents

# =============================================================================
# MCP Server Configuration
# =============================================================================
# Server name for MCP identification
MCP_SERVER_NAME=rag-mcp-server

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Text Processing Configuration
# =============================================================================
# Text chunk size for document processing
CHUNK_SIZE=1000

# Overlap between text chunks
CHUNK_OVERLAP=200

# Maximum number of chunks per document
MAX_CHUNKS_PER_DOCUMENT=100

# =============================================================================
# Model Configuration
# =============================================================================
# Google Gemini embedding model
EMBEDDING_MODEL=gemini-embedding-001

# Google Gemini LLM model
LLM_MODEL=gemini-2.0-flash

# =============================================================================
# Optional: Development Configuration
# =============================================================================
# Enable development mode features
DEV_MODE=false

# Enable detailed logging
VERBOSE_LOGGING=false
